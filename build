die()
{
	local _ret=$2
	test -n "$_ret" || _ret=1
	test "$_PRINT_HELP" = yes && print_help >&2
	echo "$1" >&2
	exit ${_ret}
}

begins_with_short_option()
{
	local first_option all_short_options
	all_short_options='igdrGh'
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}



# THE DEFAULTS INITIALIZATION - OPTIONALS
_arg_image_name="koehn/diaspora"
_arg_git_url=
_arg_diaspora_version=
_arg_ruby_version=
_arg_gem_version=

print_help ()
{
	printf "%s\n" "builds a Docker image of a Diaspora repository and pushes that image to Docker"
	printf 'Usage: %s [-i|--image-name <arg>] [-g|--git-url <arg>] [-d|--diaspora-version <arg>] [-r|--ruby-version <arg>] [-G|--gem-version <arg>] [-h|--help]\n' "$0"
	printf "\t%s\n" "-i,--image-name: name of the docker image to be pushed (default: '"koehn/diaspora"')"
	printf "\t%s\n" "-g,--git-url: git URL from which to clone the code (no default)"
	printf "\t%s\n" "-d,--diaspora-version: version of the diaspora code to compile (no default)"
	printf "\t%s\n" "-r,--ruby-version: version of ruby to use (no default)"
	printf "\t%s\n" "-G,--gem-version: version of gem to use (no default)"
	printf "\t%s\n" "-h,--help: Prints help"
}

parse_commandline ()
{
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-i|--image-name)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_image_name="$2"
				shift
				;;
			--image-name=*)
				_arg_image_name="${_key##--image-name=}"
				;;
			-i*)
				_arg_image_name="${_key##-i}"
				;;
			-g|--git-url)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_git_url="$2"
				shift
				;;
			--git-url=*)
				_arg_git_url="${_key##--git-url=}"
				;;
			-g*)
				_arg_git_url="${_key##-g}"
				;;
			-d|--diaspora-version)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_diaspora_version="$2"
				shift
				;;
			--diaspora-version=*)
				_arg_diaspora_version="${_key##--diaspora-version=}"
				;;
			-d*)
				_arg_diaspora_version="${_key##-d}"
				;;
			-r|--ruby-version)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_ruby_version="$2"
				shift
				;;
			--ruby-version=*)
				_arg_ruby_version="${_key##--ruby-version=}"
				;;
			-r*)
				_arg_ruby_version="${_key##-r}"
				;;
			-G|--gem-version)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_gem_version="$2"
				shift
				;;
			--gem-version=*)
				_arg_gem_version="${_key##--gem-version=}"
				;;
			-G*)
				_arg_gem_version="${_key##-G}"
				;;
			-h|--help)
				print_help
				exit 0
				;;
			-h*)
				print_help
				exit 0
				;;
			*)
				_PRINT_HELP=yes die "FATAL ERROR: Got an unexpected argument '$1'" 1
				;;
		esac
		shift
	done
}

parse_commandline "$@"

